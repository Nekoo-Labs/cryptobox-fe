echo "🚀 Running pre-push checks..."
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""

# Type checking
echo "🔍 Step 1/3: Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo ""
  echo "❌ Type check failed! Fix TypeScript errors before pushing."
  echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
  exit 1
fi
echo "✅ Type check passed"
echo ""

# Linting
echo "🔍 Step 2/3: Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo ""
  echo "❌ Lint check failed! Fix linting errors before pushing."
  echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
  exit 1
fi
echo "✅ Lint check passed"
echo ""

# Build
echo "🔍 Step 3/3: Building project..."
npm run build
if [ $? -ne 0 ]; then
  echo ""
  echo "❌ Build failed! Fix build errors before pushing."
  echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
  exit 1
fi
echo "✅ Build successful"
echo ""

echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "✅ All pre-push checks passed! Ready to push."
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
